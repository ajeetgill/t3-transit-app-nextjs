{
  "extends": "next/core-web-vitals",
  "rules": {
    "no-undef": "error",
    "no-unused-vars": "warn",
    "eqeqeq": "error",
    "no-console": "warn",
    "curly": "warn",
    "prefer-const": "warn",
    "no-var": "error",
    "indent": ["warn", 2],
    "semi": ["warn", "always"],
    "quotes": ["warn", "double"],
    "no-template-curly-in-string": "warn"
  },
  "overrides": [
    {
      "files": ["*.json"],
      "rules": {
        "quotes": ["error", "double"]
      }
    }
  ]
}
